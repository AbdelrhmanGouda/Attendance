<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="time request"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/btn_open_timepicker"
        android:textSize="16sp"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_open_timepicker"
        android:layout_marginTop="30dp"
        android:text="you want to leave after "
        android:layout_centerHorizontal="true"
        android:id="@+id/text_timepicker"
        ></TextView>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_below="@id/text_timepicker"
        android:layout_centerHorizontal="true"
        android:hint="enter your reason "
        android:gravity="center"
        android:id="@+id/edit_leave_request"
        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent request"
        android:layout_below="@id/edit_leave_request"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:id="@+id/btn_send_request"
        ></Button>
    

</RelativeLayout>